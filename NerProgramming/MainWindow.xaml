<Window x:Class="NerProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NerProgramming"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <StackPanel Orientation="Vertical">
        <Label Content="Web Programmint" HorizontalAlignment="Center" FontWeight="DemiBold"/>
        <GroupBox Header="Sockets">
            <UniformGrid Columns="2">
                <Button x:Name="ServerButton" Content="Server" Click="ServerButton_Click"
                        Margin="10 5" Padding="0 4 0 7"/>
                <Button x:Name="ClientButton" Content="Client" Click="ClientButton_Click"
                    Margin="10 5" Padding="0 4 0 7"/>
            </UniformGrid>
        </GroupBox>
        <Button x:Name="SendEmailButton" Click="SendEmailButton_Click" Content="Send Email" Margin="20 15" Padding="0 4 0 7"/>
    </StackPanel>
</Window>